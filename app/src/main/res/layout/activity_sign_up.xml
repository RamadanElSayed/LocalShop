<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#FFF5EE"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF5EE"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ramadanel_sayed.localshop.SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#0C090A"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="it's free and takes less than one minute"
        android:textColor="#2C3539"
        android:id="@+id/textView2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#808080"
        android:id="@+id/viewline"
        tools:targetApi="ice_cream_sandwich"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerone"
        android:weightSum="1"
        android:layout_below="@+id/viewline"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/usertwo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFirst_name"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"

            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Your First  Name "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineertwo"
        android:weightSum="1"
        android:layout_below="@+id/lineerone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/usertwo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2Last_name"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"
            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Your Last  Name "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerusername"
        android:weightSum="1"
        android:layout_below="@+id/lineertwo"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewuser"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/usertwo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextuserName"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"

            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint=" User Name "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerten"
        android:weightSum="1"
        android:layout_below="@+id/lineerusername"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewdate"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/date" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextdateBirth"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"

            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Your Birth Date "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:id="@+id/datefromcal"
            android:background="@drawable/datedate"
            android:textStyle="bold"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerthree"
        android:weightSum="1"
        android:layout_below="@+id/lineerten"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/messages" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3Email"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"
            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Your Email "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFCFF"
        android:layout_marginTop="15dp"

        android:weightSum="1"
        android:id="@+id/linearLayout">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:defaultNameCode="US"
            android:layout_weight="0.20"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Your Phone Number"
            android:id="@+id/phone"
            android:layout_weight="0.80"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerfour"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4Password"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"
            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Your Password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineerfive"
        android:weightSum="1"
        android:layout_below="@+id/lineerfour"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_weight="0.10"
            android:layout_gravity="center"
            android:layout_below="@+id/textView_signin"
            android:layout_alignLeft="@+id/textView_signin"
            android:layout_alignStart="@+id/textView_signin"
            android:src="@drawable/password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5RepeatPassword"
            android:layout_weight="0.90"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColorHint="#2B1B17"
            android:gravity="left"
            android:textColor="#2B1B17"
            android:hint="Confirm Password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FEFCFF"
        android:id="@+id/lineersix"
        android:weightSum="1"
        android:layout_below="@+id/lineerfive"
        >


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/check"
            android:layout_weight="0.01"

            android:background="@android:color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textagree"
            android:text="I agree to"

            android:gravity="left"
            android:textColor="#2B1B17"
            android:layout_weight="0.30"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/terms"
            android:textColor="#9172EC"
            android:text="Terms of use"
            android:background="#FEFCFF"
            android:gravity="left"
            android:layout_weight="0.30"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_weight="0.30"
        android:text="SignUp"
        android:id="@+id/submittoServer"
        android:background="#FFE5B4"
        android:textStyle="bold"
        android:textSize="30sp"
        />
</LinearLayout>
</ScrollView>